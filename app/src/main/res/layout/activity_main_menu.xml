<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    tools:context=".PrimaryMenuActivity">

    <Button
        android:id="@+id/btn_start_4x4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_toStartOf="@+id/btn_start_5x5"
        android:layout_toLeftOf="@+id/btn_start_5x5"
        android:layout_weight="1"
        android:background="@drawable/cell_rectangle_8"
        android:onClick="onButtonsClick"
        android:text="@string/size_4x4"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/text_white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_start_5x5"
        app:layout_constraintEnd_toStartOf="@+id/btn_start_5x5"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_start_5x5" />


    <Button
        android:id="@+id/btn_start_5x5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        android:background="@drawable/cell_rectangle_2"
        android:onClick="onButtonsClick"
        android:text="@string/size_5x5"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/text_white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_start_6x6"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_toEndOf="@+id/btn_start_5x5"
        android:layout_toRightOf="@+id/btn_start_5x5"
        android:layout_weight="1"
        android:background="@drawable/cell_rectangle_4"
        android:onClick="onButtonsClick"
        android:text="@string/size_6x6"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/text_white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_start_5x5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/btn_start_5x5"
        app:layout_constraintTop_toTopOf="@+id/btn_start_5x5" />

    <LinearLayout
        android:id="@+id/other_buttons"
        android:layout_width="330dp"
        android:layout_height="55dp"
        android:layout_margin="5dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_start_5x5">

        <ImageView
            android:id="@+id/btn_settings"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:onClick="onButtonsClick"
            android:backgroundTint="#FA96AB"
            app:srcCompat="@drawable/ic_my_settings" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>